{% set form = hookable_metadata.context.form %}
{% set product = hookable_metadata.context.resource %}

<div class="tab-pane {% if hookable_metadata.configuration.active|default(false) %}show active{% endif %}" id="product-badges" role="tabpanel" tabindex="0">
    <div class="card mb-3">
        <div class="card-header">
            <h2 id="productBadges" class="card-title">
                {{ 'sylius.ui.product_badges'|trans }}
            </h2>
        </div>
        <div class="card-body">
            {% hook 'product_badges' with { product } %}
        </div>
    </div>
</div>
